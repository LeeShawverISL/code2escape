  <!-- ——— JAVASCRIPT ——— -->
  <script>
    // Example interaction for the starter puzzle
    document.getElementById('checkBtn').addEventListener('click', function () {
      const answer = document.getElementById('userInput').value.trim().toLowerCase();
      const fb = document.getElementById('feedback');

      if (answer === "example") {        // ← students will replace this
        fb.textContent = "Correct! The system is rebooting…";
        fb.style.color = "#22d3ee";
      } else {
        fb.textContent = "Incorrect — try again.";
        fb.style.color = "#f87171";
      }
    });

    // Example behavior for NEXT ROOM button
    document.getElementById('nextRoomBtn').addEventListener('click', function () {
      alert("This would take you to the next puzzle. Students will replace this with a real link later.");
    });
  </script>

